---
import { MapPin, Phone } from '@lucide/astro'
---

<script>
  // Encuentra todos los botones con la clase `wsp` en la página.
  const buttons = document.querySelectorAll('button.wsp')
  buttons.forEach((button) => {
    button.addEventListener('click', () => {
      window.open('https://wa.me/56954047440')
    })
  })
</script>

<header class="bg-white sticky top-0 z-50 shadow-md">
  <meta
    name="google-site-verification"
    content="b58cdPOQa87DyC0NzATPAj_8FYBqF43web9jtAVrRUU"
  />

  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <!-- Logo -->
    <div class="flex items-center">
      <a href="/" class="flex items-center" aria-label="Ir al inicio">
        <img
          src="/foto3.svg"
          alt="Logo Veterinaria Fernanda Sasso - Atención a domicilio"
          width="48"
          height="48"
          class="h-12 w-12 object-cover rounded-full mr-3"
        />
        <span class="text-lg font-bold text-gray-700">Dra. Fernanda Sasso</span>
      </a>
    </div>

    <!-- Navegación principal -->
    <nav aria-label="Menú principal" class="hidden md:flex items-center gap-6">
      <a href="/" class="text-gray-600 hover:text-primary font-medium">Inicio</a
      >
      <a href="/rancagua" class="text-gray-600 hover:text-primary font-medium"
        >Rancagua</a
      >
      <a href="/machali" class="text-gray-600 hover:text-primary font-medium"
        >Machalí</a
      >
      <a href="#contacto" class="text-gray-600 hover:text-primary font-medium"
        >Contacto</a
      >
    </nav>

    <!-- Info rápida + CTA -->
    <div class="flex items-center space-x-4">
      <div class="hidden sm:flex items-center space-x-2 text-gray-600 text-sm">
        <MapPin class="w-4 h-4 text-blue-500" />
        <span class="font-medium">Rancagua | Machalí</span>
      </div>

      <a
        href="https://wa.me/56954047440"
        target="_blank"
        rel="noopener noreferrer"
        class="wsp flex items-center justify-center bg-green-500 text-white px-4 py-2 rounded-full text-sm font-semibold shadow hover:bg-green-600 transition-colors"
      >
        <Phone class="w-4 h-4 mr-2" />
        WhatsApp
      </a>
    </div>
  </div>
</header>
