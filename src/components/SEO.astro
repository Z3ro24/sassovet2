---
const {
  title = 'Veterinaria Fernanda Sasso',
  description = 'Veterinaria a domicilio en Rancagua y Machalí. Consultas, vacunación, emergencias y más. Atención rápida y profesional.',
  url = 'https://drasassovet.cl',
  image = 'https://drasassovet.cl/_astro/foto2.DQJT7_xQ_2uj8Ns.webp',
  type = 'website',
  locale = 'es_CL'
} = Astro.props
---

<head>
  <!-- 🔑 SEO BÁSICO -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={url} />

  <!-- 🌍 Open Graph / Facebook -->
  <meta property="og:type" content={type} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={url} />
  <meta property="og:image" content={image} />
  <meta property="og:locale" content={locale} />

  <!-- 🐦 Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />

  <!-- 📱 Responsive -->
  <!-- viewport moved to layout to avoid duplicate -->

  <!-- 📌 Idioma -->
  <meta name="language" content="Spanish" />

  <!-- 📊 JSON-LD: Veterinaria Local -->
  <!-- 📊 JSON-LD: Veterinaria Local -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "VeterinaryCare",
      "name": "Veterinaria Fernanda Sasso",
      "image": "https://drasassovet.cl/_astro/foto2.DQJT7_xQ_2uj8Ns.webp",
      "url": "https://drasassovet.cl/",
      "telephone": "+56954047440",
      "email": "f.sassovet@hotmail.com",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Rancagua",
        "addressRegion": "O'Higgins",
        "addressCountry": "Chile"
      },
      // "geo": {
      //   "@type": "GeoCoordinates",
      //   "latitude": -34.1708,
      //   "longitude": -70.7395
      // },
      "areaServed": ["Rancagua", "Machalí"],
      "description": "Veterinaria a Domicilio en Rancagua: consultas, vacunación, emergencias y atención profesional en tu hogar.",
      "priceRange": "$",
      "paymentAccepted": "Cash, Transfer",
      "openingHours": ["Mo-Fr 09:00-19:00", "Sa 09:00-14:00"],
      "sameAs": ["https://www.instagram.com/dra.sassovet/"]
    }
  </script>

  <!-- FAQ structured data (improves SERP snippets for common questions) -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "¿Ofrecen atención a domicilio en Rancagua?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Sí, ofrecemos atención veterinaria a domicilio en Rancagua y Machalí para consultas, vacunación y emergencias."
          }
        },
        {
          "@type": "Question",
          "name": "¿Cómo agendo una consulta a domicilio?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Puedes agendar llamando al +56954047440 o enviando un mensaje por WhatsApp al mismo número."
          }
        }
      ]
    }
  </script>
</head>
